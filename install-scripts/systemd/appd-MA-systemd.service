[Unit]
Description=AppDynamics Machine Agent
After=syslog.target network.target
 
[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutSec=1min
Restart=on-failure
RestartSec=1
ExecStart=/bin/bash -c '/your-platform-install/startup-scripts/start-MA.sh'
 
StandardOutput=journal+console
 
[Install]
WantedBy=multi-user.target